<section class="TodoSection">
  <div class="TodoSectionTitle">
    <p class="TodoSectionTitle-text"><%= section_title %></p>
    <p class="TodoSectionTitle-remainingCount">
      <%= todos.completed.count %>
      <%= todos.count %>
    </p>
  </div>
 <ul>
  <% todos.all.each do |todo| %>
    <li class="TodoItem" >
      <label class="TodoItem-container" >
        <%= form_with(url: "/todos/#{todo.id}", method: "put") do %>
          <%= check_box_tag "completed", "yes",
                            todo.completed, :class => "TodoItem-checkbox",
                                            :onclick => "this.form.submit()" %>
        <% end %>
        <p class='<%= todo.completed ? "TodoItem-container_textLineThrouh" : "" %>' >
          <%= todo.todo_text %>
        </p>
        <% if show_due_date %>
          <p class ="TodoItem-due_Date" >
            <%= todo.due_date.to_s(:short) %>
          </p>
        <% end %>
        <a class="TodoItem-delete" href="javascript:void(0)" >
          <%= form_with(url: "/todos/#{todo.id}", method: "delete") do %>
            <%= image_submit_tag("trashcan.svg") %>
          <% end %>
        </a>
      </label>
    </li>
  <% end %>
</ul>
</section>
